{
  "name": "@student/major-project-for-college",
  "version": "1.0.0",
  "description": "A major project for college",
  "main": "app.js",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "scripts": {
    "start": "node --env-file=.env app.js",
    "dev": "nodemon --env-file=.env app.js",
    "worker": "node src/subscribers/notificationWorker.js",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:workers": "jest --testPathPatterns=notification",
    "test:workers:unit": "jest tests/unit/notification*.test.js",
    "test:workers:integration": "jest tests/integration/notification*.test.js",
    "test:setup-redis": "docker-compose -f docker-compose.test.yml up -d redis-test",
    "test:teardown-redis": "docker-compose -f docker-compose.test.yml down",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:test": "docker-compose -f docker-compose.test.yml up --build --abort-on-container-exit",
    "docker:logs": "docker-compose logs -f",
    "lint": "eslint src/ tests/ --fix",
    "lint:check": "eslint src/ tests/"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "bson": "^6.8.0",
    "bullmq": "^5.58.4",
    "cookie": "^0.7.0",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "express-rate-limit": "^7.4.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.7.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.0",
    "nodemailer": "^6.9.15"
  },
  "devDependencies": {
    "cross-env": "^10.0.0",
    "eslint": "^8.57.0",
    "jest": "^30.1.2",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/config/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 30000
  }
}
